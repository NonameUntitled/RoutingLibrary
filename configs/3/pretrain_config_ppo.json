{
  "experiment_name": "ppo_pretrain",
  "topology": {
    "type": "oriented",
    "sources": {
      "0": {
        "upstream_conv": 0
      },
      "1": {
        "upstream_conv": 1
      },
      "2": {
        "upstream_conv": 3
      }
    },
    "sinks": [
      0,
      1
    ],
    "diverters": {
      "0": {
        "conveyor": 3,
        "pos": 50,
        "upstream_conv": 4
      },
      "1": {
        "conveyor": 0,
        "pos": 75,
        "upstream_conv": 6
      },
      "2": {
        "conveyor": 1,
        "pos": 100,
        "upstream_conv": 5
      },
      "3": {
        "conveyor": 3,
        "pos": 150,
        "upstream_conv": 7
      },
      "4": {
        "conveyor": 0,
        "pos": 300,
        "upstream_conv": 2
      }
    },
    "conveyors": {
      "0": {
        "length": 500,
        "upstream": {
          "type": "sink",
          "id": 0
        }
      },
      "1": {
        "length": 200,
        "upstream": {
          "type": "conveyor",
          "id": 0,
          "pos": 150
        }
      },
      "2": {
        "length": 200,
        "upstream": {
          "type": "sink",
          "id": 1
        }
      },
      "3": {
        "length": 200,
        "upstream": {
          "type": "conveyor",
          "id": 2,
          "pos": 150
        }
      },
      "4": {
        "length": 150,
        "upstream": {
          "type": "conveyor",
          "id": 0,
          "pos": 25
        }
      },
      "5": {
        "length": 500,
        "upstream": {
          "type": "conveyor",
          "id": 0,
          "pos": 400
        }
      },
      "6": {
        "length": 1000,
        "upstream": {
          "type": "conveyor",
          "id": 2,
          "pos": 50
        }
      },
      "7": {
        "length": 1000,
        "upstream": {
          "type": "conveyor",
          "id": 0,
          "pos": 450
        }
      }
    }
  },
  "agent": {
    "type": "ppo",
    "current_node_idx_prefix": "current_node_idx",
    "destination_node_idx_prefix": "destination_node_idx",
    "neighbors_node_ids_prefix": "neighbors_node_ids",
    "output_prefix": "next_nodes",
    "actor": {
      "type": "tower_actor",
      "embedder": {
        "shared": true,
        "type": "laplacian",
        "embedding_dim": 16
      },
      "ff_net": {
        "type": "tower",
        "input_dim": 16,
        "hidden_dims": [
          256,
          256
        ],
        "output_dim": 16
      }
    },
    "critic": {
      "type": "tower_critic",
      "embedder": {
        "shared": true,
        "type": "laplacian",
        "embedding_dim": 16
      },
      "ff_net": {
        "type": "tower",
        "input_dim": 16,
        "hidden_dims": [
          256,
          256
        ],
        "output_dim": 1
      }
    }
  },
  "loss": {
    "type": "composite",
    "losses": [
      {
        "type": "mse",
        "predictions_prefix": "predicted_current_state_v_value",
        "ground_truth_prefix": "path_length",
        "output_prefix": "mse_loss"
      },
      {
        "type": "cross_entropy",
        "labels_prefix": "next_node_idx",
        "predictions_prefix": "predicted_next_node_logits",
        "output_prefix": "cross_entropy_loss"
      }
    ],
    "output_prefix": "loss"
  },
  "optimizer": {
    "type": "basic",
    "optimizer": {
      "type": "adamw",
      "lr": 3e-4,
      "eps": 1e-8
    },
    "clip_grad_threshold": 5.0
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "loss",
        "on_step": 1,
        "regime_prefix": "pretrain",
        "loss_prefix": "loss"
      },
      {
        "type": "loss",
        "on_step": 1,
        "regime_prefix": "pretrain",
        "loss_prefix": "mse_loss"
      },
      {
        "type": "loss",
        "on_step": 1,
        "regime_prefix": "pretrain",
        "loss_prefix": "cross_entropy_loss"
      }
    ]
  },
  "model_name": "ppo_pretrain_model",
  "num_samples": 10000,
  "num_epochs": 500,
  "shared_embedder": {
    "shared": true,
    "type": "laplacian",
    "embedding_dim": 16
  }
}
